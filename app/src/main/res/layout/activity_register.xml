<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.goo.test.Activity.RegisterActivity">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@mipmap/ic_launcher_round" />


        <android.support.design.widget.TextInputLayout
            android:id="@+id/aa"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_image"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            >

            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"


                android:drawableLeft="@drawable/ic_email_black_24dp"
                android:drawableStart="@drawable/ic_email_black_24dp"
                android:hint="이메일"

                android:padding="10dp"
                android:textColor="#000000"
                android:textColorHint="#000000" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/validateButton_email"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignTop="@id/aa"
            android:layout_below="@id/profile_image"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/aa"
            android:background="?attr/colorPrimary"
            android:text="중복확인"
            android:textColor="#ffffff"
            android:textSize="10dp"
            android:textStyle="bold" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/bb"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/aa"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            >

            <EditText
                android:id="@+id/editTextUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"


                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:drawableStart="@drawable/ic_person_black_24dp"
                android:hint="닉네임"
                android:padding="10dp"
                android:textColor="#000000"
                android:textColorHint="#000000"

                />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/validateButton"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignTop="@id/bb"
            android:layout_below="@id/aa"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/bb"
            android:background="?attr/colorPrimary"
            android:text="중복확인"
            android:textColor="#ffffff"
            android:textSize="10dp"
            android:textStyle="bold"
            />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/cc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bb"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            >

            <EditText
                android:layout_gravity="center"
                android:id="@+id/editTextPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
                android:drawableStart="@drawable/ic_lock_outline_black_24dp"
                android:hint="비밀번호"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="#000000"
                android:textColorHint="#000000" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/dd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cc"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            >
            <EditText
                android:id="@+id/editTextPassword_Confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/buttonRegister"

                android:layout_alignStart="@+id/buttonRegister"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
                android:drawableStart="@drawable/ic_lock_outline_black_24dp"
                android:hint="비밀번호 확인"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="#000000"
                android:textColorHint="#000000" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/buttonRegister"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/dd"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="?attr/colorPrimary"
            android:text="가입하기"
            android:textColor="#ffffff"
            android:textSize="20dp" />




</RelativeLayout>
