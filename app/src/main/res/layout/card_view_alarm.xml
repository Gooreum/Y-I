    <RelativeLayout
        android:id="@+id/relative_new_project"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/user_profile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ai"
            />
        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"
            android:textSize="13sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_toRightOf="@id/user_profile"
            />
        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/new_project_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 님이 프로젝트 모집글을 작성하였습니다."
            android:textSize="13sp"
            android:layout_toRightOf="@id/username"
            />

        <TextView
            android:id="@+id/history_new_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/user_profile"
            android:text="시간"
            android:layout_marginTop="5dp"
            android:layout_below="@id/username"

            />
        <TextView
            android:layout_marginTop="15dp"
            android:layout_below="@id/history_new_project"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"

            />
    </RelativeLayout>


